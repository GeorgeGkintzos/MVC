@{
    ViewData["Title"] = "Πρόγραμμα Τηλεφώνου";
}

<h2 class="text-center">Πρόγραμμα Τηλεφώνου</h2>

<div class="info-container text-center">
    <p><i class="fas fa-phone-alt" style="color: #007bff;"></i><strong>Αριθμός Τηλεφώνου:</strong></p>
    <p class="highlight-text">@ViewBag.PhoneNumber</p>

    <p><i class="fas fa-cogs" style="color: #007bff;"></i><strong>Όνομα Προγράμματος:</strong></p>
    <p class="highlight-text">@ViewBag.ProgramName</p>
</div>

<!-- Back to Index Button -->
<div class="text-center mb-4">
    <button type="button" class="btn btn-secondary px-4" id="backButton" onclick="window.location.href='@Url.Action("Index", "Client")'">
        Back to Index
    </button>
</div>

<!-- Add Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f7f7f7; /* Light background color for readability */
    }

    .info-container {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        margin: 30px auto;
    }

    h2 {
        color: #333;
        font-size: 2rem;
        margin-bottom: 20px;
    }

    p {
        font-size: 1.2rem;
        color: #555;
    }

    strong {
        color: #007bff; /* Highlight strong text with blue color */
    }

    .highlight-text {
        color: #28a745; /* Green color for phone number and program name */
        font-size: 1.5rem; /* Larger size */
        font-weight: bold;
    }

    .info-container p {
        margin-bottom: 15px;
    }

    i {
        margin-right: 10px;
    }
</style>