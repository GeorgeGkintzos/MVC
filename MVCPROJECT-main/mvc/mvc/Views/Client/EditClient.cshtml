@model mvc.Models.Client

@{
    ViewData["Title"] = "Client | Account Management";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <div class="card shadow-lg rounded-3">
                <div class="card-header bg-primary text-white text-center">
                    <h2>Edit My Account</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div class="mb-3">
                            <label for="ClientId" class="form-label">Client ID</label>
                            <input type="text" asp-for="ClientId" class="form-control" readonly />
                        </div>
                        <div class="mb-3">
                            <label for="Afm" class="form-label">ΑΦΜ</label>
                            <input type="text" asp-for="Afm" class="form-control" readonly />
                        </div>
                        <div class="mb-3">
                            <label for="PhoneNumber" class="form-label">Τηλέφωνο</label>
                            <input type="text" asp-for="PhoneNumber" class="form-control" readonly />
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary px-4">
                                Επεξεργασία
                            </button>
                            <button type="button" class="btn btn-secondary px-4 ms-3" onclick="window.location.href='@Url.Action("Index", "Client")'">
                                Back to Index
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
