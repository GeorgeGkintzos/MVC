@model List<mvc.Models.User>

@{
    ViewData["Title"] = "User List";
}

<h1 class="text-center text-primary mb-4">User List</h1>

<hr />

<div class="table-container mb-4">
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>User ID</th>
                <th>Username</th>
                <th>Property</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.Username</td>
                    <td>@user.Property</td>
                    <td>
                        <a asp-action="MakeSeller" asp-route-id="@user.UserId" class="btn btn-success-custom">
                            Create Seller
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center">
    <a asp-action="Index" class="btn btn-primary px-4 py-2">Back to Control Panel</a>
</div>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa;
    }

    h1, h4 {
        font-family: 'Arial', sans-serif;
    }

    h1 {
        font-size: 2.5rem;
    }

    h4 {
        font-size: 1.2rem;
    }

    .table-container {
        width: 100%;
        overflow-y: auto;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        table-layout: fixed;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    th, td {
        padding: 12px;
        text-align: center;
        font-size: 1rem;
    }

    th {
        background-color: #007bff;
        color: white;
        position: sticky;
        top: 0;
        z-index: 1;
    }

    td {
        background-color: #ffffff;
    }

    .table-striped tbody tr:nth-child(odd) {
        background-color: #f2f2f2;
    }

    /* Create Seller Button */
    .btn-success-custom {
        background: linear-gradient(45deg, #28a745, #218838);
        color: white;
        font-weight: bold;
        border: none;
        border-radius: 30px;
        padding: 10px 20px;
        font-size: 1.1rem;
        font-family: 'Arial', sans-serif;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: background 0.3s ease, transform 0.2s ease;
    }

        .btn-success-custom i {
            font-size: 1.2rem;
        }

        .btn-success-custom:hover {
            background: linear-gradient(45deg, #38c759, #2a9d4a);
            transform: translateY(-2px);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        }

    /* Primary Button */
    .btn-primary, .btn-success {
        font-weight: bold;
        font-size: 1rem;
        border-radius: 30px;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .text-center a {
        text-decoration: none;
    }
</style>
