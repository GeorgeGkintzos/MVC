@model IEnumerable<mvc.Models.Program>

@{
    ViewData["Title"] = "Admin | Edit Program";
}

<h1 class="text-center text-primary mb-4">Edit Program</h1>
<h4 class="text-center text-muted mb-4">Manage Existing Programs</h4>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-md-12 col-sm-12">
            <!-- Add Program Button -->
            <div class="text-center mb-4">
                <a asp-action="CreateProgram" class="btn btn-success-custom">Add Program</a>
            </div>

            <!-- Table to display programs -->
            <div class="table-container mb-5">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Program Name</th>
                            <th>Benefits</th>
                            <th>Charge</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.ProgramName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Benefits)</td>
                                <td>@Html.DisplayFor(modelItem => item.Charge)</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.ProgramName" class="btn btn-warning-custom">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Back to Control Panel Button -->
            <div class="text-center mb-4">
                <a asp-action="Index" class="btn btn-secondary-custom">Back to Control Panel</a>
            </div>
        </div>
    </div>
</div>

<!-- Add Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<style>
    /* Body Styling */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa;
    }

    h1, h4 {
        font-family: 'Arial', sans-serif;
    }

    h1 {
        font-size: 2.5rem;
    }

    h4 {
        font-size: 1.2rem;
    }

    /* Button Styling */
    .btn {
        border-radius: 30px;
        padding: 10px 20px;
        font-size: 1.1rem;
        font-weight: bold;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-success-custom {
        background-color: #28a745;
        color: white;
        border: none;
    }

        .btn-success-custom:hover {
            background-color: #218838;
            transform: scale(1.05);
        }

    .btn-warning-custom {
        background-color: #ffc107;
        color: white;
        border: none;
    }

        .btn-warning-custom:hover {
            background-color: #e0a800;
            transform: scale(1.05);
        }

    .btn-secondary-custom {
        background-color: #6c757d;
        color: white;
        border: none;
        border-radius: 30px;
        padding: 10px 20px;
    }

        .btn-secondary-custom:hover {
            background-color: #5a6268;
            transform: scale(1.05);
        }

    /* Table Styling */
    .table {
        width: 100%;
        border-collapse: collapse;
        table-layout: fixed; /* Ensures columns are aligned */
    }

    th, td {
        padding: 12px;
        text-align: center;
        border-bottom: 1px solid #ddd;
        word-wrap: break-word;
    }

    th {
        background-color: #f8f9fa;
        position: sticky;
        top: 0;
        z-index: 1;
    }

    .table-striped tbody tr:nth-child(odd) {
        background-color: #f2f2f2;
    }

    .table-container {
        overflow-x: auto;
        max-width: 100%;
        margin-bottom: 20px;
    }

    .btn {
        font-size: 1rem;
        padding: 8px 16px;
    }

    .table-container {
        padding: 0 10px;
    }

    }</style>