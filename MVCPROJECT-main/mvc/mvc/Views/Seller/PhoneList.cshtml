@model List<mvc.Models.Phone>

@{
    ViewData["Title"] = "Seller | Update Program";
}

<h2 class="text-center mb-4">Update Program</h2>

<form method="post" action="@Url.Action("UpdateProgram", "Seller")">
    <div class="table-container mb-5">
        <table class="table table-striped table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>Phone Number</th>
                    <th>Current Program</th>
                    <th>Select Program</th>
                    <th>Update</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var phone in Model)
                {
                    <tr>
                        <td>@phone.PhoneNumber</td>
                        <td>@phone.ProgramName</td>
                        <td>
                            <select name="programName" class="form-control program-select">
                                <option value="">Select Program</option>
                                @foreach (var program in ViewData["Programs"] as List<mvc.Models.Program>)
                                {
                                    <option value="@program.ProgramName"
                                            selected="@(program.ProgramName == phone.ProgramName ? "selected" : "")">
                                        @program.ProgramName
                                    </option>
                                }
                            </select>
                        </td>
                        <td>
                            <button type="submit" class="btn btn-warning" name="phoneNumber" value="@phone.PhoneNumber">
                                <i class="fas fa-sync-alt"></i> Update
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="text-center">
            <a asp-action="Index" class="btn btn-primary">
                <i class="fas fa-arrow-left"></i> Back to Control Panel
            </a>
        </div>
    </div>
</form>

<!-- Add Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h2 {
        margin-bottom: 20px;
    }

    .text-center {
        text-align: center;
    }

    .table-container {
        width: 100%;
        overflow-x: auto;
        margin-top: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    th, td {
        padding: 12px 15px;
        text-align: center;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f7f7f7;
        position: sticky;
        top: 0;
        z-index: 1;
    }

    tr:hover {
        background-color: #f1f1f1;
    }

    .btn {
        padding: 12px 25px;
        font-size: 18px;
        cursor: pointer;
        border-radius: 5px;
        border: none;
        display: inline-flex;
        align-items: center;
        gap: 10px;
    }

    .btn-warning {
        background-color: #ffc107;
        color: black;
        transition: all 0.3s ease;
    }

        .btn-warning:hover {
            background-color: #e0a800;
            transform: scale(1.05);
        }

    .btn i {
        font-size: 20px;
    }

    .form-control {
        padding: 7px;
        font-size: 16px;
        width: 100%;
        border-radius: 5px;
    }

    /* Updated styles for the select input to improve readability */
    .program-select {
        background-color: #ffffff; /* White background for better contrast */
        color: #333333; /* Dark text color */
        border: 1px solid #cccccc; /* Subtle border */
    }

        .program-select option {
            color: #333333; /* Ensure the text is readable */
            background-color: #ffffff; /* White background */
        }

        /* Focused state for the select */
        .program-select:focus {
            border-color: #80bdff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    select.program-select {
        margin-top: 10px;
    }
</style>