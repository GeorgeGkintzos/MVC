@model List<mvc.Models.User>

@{
    ViewData["Title"] = "Seller | User List";
}

<h1 class="text-center">User List</h1>

<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>User ID</th>
                <th>Username</th>
                <th>Property</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.Username</td>
                    <td>@user.Property</td>
                    <td>
                        <a asp-action="MakeClient" asp-route-id="@user.UserId" class="btn btn-success">
                            <i class="fas fa-user-plus"></i> Create Client
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

<div class="text-center">
    <a asp-action="Index" class="btn btn-primary">
        <i class="fas fa-arrow-left"></i> Back to Control Panel
    </a>
</div>

<!-- Add Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .text-center {
        text-align: center;
    }

    .table-container {
        width: 100%;
        overflow-x: auto;
        margin-top: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 12px 15px;
        text-align: center;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f7f7f7;
        position: sticky;
        top: 0;
        z-index: 1;
    }

    tr:hover {
        background-color: #f1f1f1;
    }

    .btn {
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
        border-radius: 5px;
        border: none;
        display: inline-flex;
        align-items: center;
        gap: 10px;
    }

    .btn-success {
        background-color: #28a745;
        color: white;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }

    .btn:hover {
        opacity: 0.9;
        transform: scale(1.05);
    }

    .btn-success:hover {
        background-color: #218838;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .btn i {
        font-size: 18px;
    }

    .btn-danger-custom {
        background-color: green;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
    }

        .btn-danger-custom:hover {
            background-color: greenyellow;
            transform: scale(1.05);
        }
</style>