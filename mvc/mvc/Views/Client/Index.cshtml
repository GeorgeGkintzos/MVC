@{
    ViewData["Title"] = "Client | Control Panel";
}

<h1 class="text-start">Client</h1>
<h4 class="text-start">Control Panel</h4>

<div class="d-flex justify-content-start">
    <div class="buttons-container">
        <form asp-action="EditClient" method="post">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-user-edit"></i> Edit your Account
            </button>
        </form>

        <form asp-action="ViewProgram" method="post">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-calendar-check"></i> View Program
            </button>
        </form>

        <form asp-action="ViewBills" method="post">
            <button type="submit" class="btn btn-orange">
                <i class="fas fa-file-invoice"></i> View Bills
            </button>
        </form>

        <form asp-action="ViewCalls" method="post">
            <button type="submit" class="btn btn-secondary">
                <i class="fas fa-phone-alt"></i> View Call History
            </button>
        </form>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .buttons-container {
        margin-top: 20px;
        display: flex;
        flex-direction: column;
        gap: 15px;
        max-width: 350px;
    }

    .btn {
        padding: 15px 30px;
        font-size: 16px;
        cursor: pointer;
        border-radius: 8px;
        border: none;
        transition: all 0.3s ease-in-out;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

        .btn i {
            font-size: 18px;
        }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

    .btn-success {
        background-color: #28a745;
        color: white;
    }

    .btn-orange {
        background-color: #FFA500;
        color: white;
    }

    .btn:hover {
        opacity: 0.9;
        transform: scale(1.05);
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }

    .btn-success:hover {
        background-color: #218838;
    }

    .btn-orange:hover {
        background-color: #e69500;
    }

    h1, h4 {
        margin-bottom: 20px;
    }
</style>
