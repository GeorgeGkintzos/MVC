@model IEnumerable<mvc.Models.Phone>

@{
    ViewData["Title"] = "Seller | Client's Bills";
}

<h1 class="text-center mb-4">Client Bills</h1>

<table class="table table-striped table-bordered">
    <thead class="thead-light">
        <tr>
            <th>Phone Number</th>
            <th>Program Name</th>
            <th>Benefits</th>
            <th>Charge</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var phone in Model)
        {
            <tr>
                <td>@phone.PhoneNumber</td>
                <td>@phone.ProgramNameNavigation?.ProgramName</td>
                <td>@phone.ProgramNameNavigation?.Benefits</td>
                <td>@phone.ProgramNameNavigation?.Charge</td>
                <td>
                    <form method="post" asp-action="AddBill" asp-route-phoneNumber="@phone.PhoneNumber">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-check-circle"></i> Send Bill
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <a asp-action="Index" class="btn btn-primary">
        <i class="fas fa-arrow-left"></i> Back to Control Panel
    </a>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h2 {
        margin-bottom: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        padding: 12px 15px;
        text-align: center;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f7f7f7;
        position: sticky;
        top: 0;
        z-index: 1;
    }

    tr:hover {
        background-color: #f1f1f1;
    }

    .btn {
        padding: 12px 25px;
        font-size: 16px;
        cursor: pointer;
        border-radius: 5px;
        border: none;
        display: inline-flex;
        align-items: center;
        gap: 10px;
    }

    .btn-success {
        background-color: #28a745;
        color: white;
        transition: all 0.3s ease;
    }

        .btn-success:hover {
            background-color: #218838;
            transform: scale(1.05);
        }

    .btn i {
        font-size: 18px;
    }

    .table-container {
        width: 100%;
        max-height: 500px;
        overflow-y: auto;
    }
</style>