@{
    ViewData["Title"] = "Seller | Control Panel";
}

<h1>Seller</h1>
<h4>Control Panel</h4>

<div class="buttons-container">

    <form asp-action="CreateClient" method="post">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-users"></i> View User List
        </button>
    </form>

    <form asp-action="ClientList" method="post">
        <button type="submit" class="btn btn-success">
            <i class="fas fa-list"></i> View Client List
        </button>
    </form>

    <form asp-action="UpdateProgram" method="post">
        <button type="submit" class="btn btn-secondary">
            <i class="fas fa-edit"></i> Change Client's Program
        </button>
    </form>

    <form asp-action="AddBill" method="post">
        <button type="submit" class="btn btn-info">
            <i class="fas fa-file-invoice"></i> View Bills
        </button>
    </form>

</div>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<style>
    .buttons-container {
        margin-top: 20px;
        display: flex;
        flex-direction: column;
        gap: 15px;
        max-width: 300px;
    }

    .btn {
        padding: 15px 30px;
        font-size: 16px;
        cursor: pointer;
        border-radius: 8px;
        border: none;
        transition: all 0.3s ease-in-out;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

        .btn i {
            font-size: 18px;
        }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

    .btn-success {
        background-color: #28a745;
        color: white;
    }

    .btn-info {
        background-color: #17a2b8;
        color: white;
    }

    .btn:hover {
        opacity: 0.85;
        transform: scale(1.05);
    }
</style>