@{
    ViewData["Title"] = "Login / Sign Up";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 col-sm-12">
            <div class="card shadow-lg">
                <div class="card-header text-center bg-primary text-white">
                    <h3>@ViewData["Title"]</h3>
                    <h6> Please select an option</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <a href="@Url.Action("Login")" class="btn btn-lg btn-outline-primary w-100 py-4">
                                <i class="fas fa-sign-in-alt"></i> Login
                            </a>
                        </div>
                        <div class="col-md-12 mb-3">
                            <a href="@Url.Action("SingUp")" class="btn btn-lg btn-outline-success w-100 py-4">
                                <i class="fas fa-user-plus"></i> Sign Up
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f6f9;
    }

    .container {
        max-width: 960px;
        margin-top: 50px;
    }

    .card {
        border-radius: 15px;
        border: none;
    }

    .card-header {
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
    }

    .btn {
        border-radius: 30px;
        font-size: 1.3rem;
        font-weight: bold;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-outline-primary {
        border: 2px solid #007bff;
        color: #007bff;
    }

        .btn-outline-primary:hover {
            background-color: #007bff;
            color: white;
            transform: scale(1.05);
        }

    .btn-outline-success {
        border: 2px solid #28a745;
        color: #28a745;
    }

        .btn-outline-success:hover {
            background-color: #28a745;
            color: white;
            transform: scale(1.05);
        }

    .lead {
        font-size: 1.2rem;
    }

    .card-body {
        padding: 30px;
    }

    .btn i {
        margin-right: 10px;
    }

    .py-4 {
        padding-top: 1.5rem;
        padding-bottom: 1.5rem;
    }
</style>